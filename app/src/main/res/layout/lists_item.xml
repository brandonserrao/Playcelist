<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72sp"
    android:background="@color/Surface"
    android:orientation="horizontal"
    android:padding="16sp"
    android:textSize="16sp"
    android:theme="@style/AppTheme">

    <!-- list art -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="false"
        android:src="@drawable/albumart" />

    <RelativeLayout
        android:id="@+id/text_list_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toStartOf="@+id/icons"
        android:layout_toEndOf="@+id/iv"
        android:clickable="false"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="16dp">

            <!-- list number -->
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="placeholdertext1"
                android:textColor="@color/OnSurface" />

            <!-- list name -->
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv1"
                android:text="placeholdertext2"
                android:textColor="@color/OnSurface"
                android:textStyle="normal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@+id/line1"
            android:layout_alignParentBottom="true"
            android:paddingTop="10dp">

            <!-- analog to artist -->
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingEnd="10dp"
                android:text="placeholdertext3"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- lat -->
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv3"
                android:layout_toEndOf="@+id/tv3"
                android:paddingEnd="10dp"
                android:text="placeholdertext4"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv4"
                android:text="placeholdertext5"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/icons"
        android:layout_width="104dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:paddingVertical="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_showListOnMap"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:onClick="viewListOnMap"
            android:paddingEnd="8dp"
            android:src="@drawable/mapicon" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_playList"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/btn_showListOnMap"
            android:onClick="API_playThisList"
            android:paddingHorizontal="8dp"
            android:src="@drawable/play" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_deleteList"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:onClick="onClickOpenListDeleteDialog"
            android:paddingStart="8dp"
            android:src="@drawable/delete" />

    </RelativeLayout>
</RelativeLayout>